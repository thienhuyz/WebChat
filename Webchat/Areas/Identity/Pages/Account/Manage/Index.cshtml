@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username (không chỉnh sửa được) -->
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" disabled />
                <label asp-for="Input.Username" class="form-label">Username</label>
            </div>

            <!-- Full Name -->
            <div class="form-floating">
                <input asp-for="Input.FullName" class="form-control" />
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Avatar Selection -->
            <div class="form-group">
                <label>Select your Avatar</label>
                <div>
                    <label>
                        <input asp-for="Input.Avatar" type="radio" value="avatar1.png" />
                        <img src="~/images/icons/avatar1.png" alt="Avatar 1" class="avatar-option" />
                    </label>
                    <label>
                        <input asp-for="Input.Avatar" type="radio" value="avatar2.png" />
                        <img src="~/images/icons/avatar2.png" alt="Avatar 2" class="avatar-option" />
                    </label>
                    <label>
                        <input asp-for="Input.Avatar" type="radio" value="avatar3.png" />
                        <img src="~/images/icons/avatar3.png" alt="Avatar 3" class="avatar-option" />
                    </label>
                    <label>
                        <input asp-for="Input.Avatar" type="radio" value="avatar4.png" />
                        <img src="~/images/icons/avatar4.png" alt="Avatar 4" class="avatar-option" />
                    </label>
                </div>
                <span asp-validation-for="Input.Avatar" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
